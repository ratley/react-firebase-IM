{
  "name": "postcss",
  "version": "6.0.9",
  "description": "Tool for transforming styles with JS plugins",
  "engines": {
    "node": ">=4.0.0"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "http://postcss.org/",
  "repository": "postcss/postcss",
  "dependencies": {
    "chalk": "^2.1.0",
    "source-map": "^0.5.6",
    "supports-color": "^4.2.1"
  },
  "main": "lib/postcss",
  "types": "lib/postcss.d.ts",
  "lint-staged": {
    "test/*.js": "eslint",
    "lib/*.es6": "eslint",
    "*.md": "yaspeller-ci"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "browser": {
    "fs": false
  },
  "size-limit": [
    {
      "path": "build/lib/postcss.js",
      "babili": true,
      "limit": "36 KB"
    }
  ]
}