{
	"name": "bim",
	"author": "bralley",
	"description": "x",
	"version": "0.1.0",
	"private": true,
	"build": {
		"appId": "com.inniss.bim",
		"productName": "bIM v0.666",
		"asar": "false",

		"files": ["build/**/*", "src/main.js", "node_modules"],
		"dmg": {
			"title": "bIM v0.666",
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": ["AppImage", "deb"]
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": ["x64", "ia32"]
				}
			]
		}
	},
	"dependencies": {},
	"devDependencies": {
		"electron": "latest",
		"electron-builder": "latest"
	},
	"dependencies": {
		"autoprefixer": "7.1.2",
		"babel-core": "6.25.0",
		"babel-eslint": "7.2.3",
		"babel-jest": "20.0.3",
		"babel-loader": "7.1.1",
		"babel-preset-react-app": "^3.0.2",
		"babel-runtime": "6.23.0",
		"case-sensitive-paths-webpack-plugin": "2.1.1",
		"chalk": "1.1.3",
		"concurrently": "^3.5.0",
		"css-loader": "0.28.4",
		"dotenv": "4.0.0",
		"eslint": "4.4.1",
		"eslint-config-react-app": "^2.0.0",
		"eslint-loader": "1.9.0",
		"eslint-plugin-flowtype": "2.35.0",
		"eslint-plugin-import": "2.7.0",
		"eslint-plugin-jsx-a11y": "5.1.1",
		"eslint-plugin-react": "7.1.0",
		"extract-text-webpack-plugin": "3.0.0",
		"file-loader": "0.11.2",
		"fs-extra": "3.0.1",
		"html-webpack-plugin": "2.29.0",
		"jest": "20.0.4",
		"object-assign": "4.1.1",
		"postcss-flexbugs-fixes": "3.2.0",
		"postcss-loader": "2.0.6",
		"promise": "8.0.1",
		"react": "^15.6.1",
		"react-dev-utils": "^3.1.0",
		"react-dom": "^15.6.1",
		"react-error-overlay": "^1.0.10",
		"style-loader": "0.18.2",
		"sw-precache-webpack-plugin": "0.11.4",
		"twitch-sdk": "^0.3.1",
		"url-loader": "0.5.9",
		"wait-on": "^2.0.2",
		"webpack": "3.5.1",
		"webpack-dev-server": "2.7.1",
		"webpack-manifest-plugin": "1.2.1",
		"whatwg-fetch": "2.0.3"
	},
	"devDependencies": {
		"concurrently": "^3.5.0",
		"electron": "latest",
		"electron-builder": "^19.27.2",
		"firebase": "^4.3.0",
		"node-sass": "^4.5.3",
		"sass-loader": "^6.0.6",
		"wait-on": "^2.0.2"
	},
	"main": "src/main.js",
	"homepage": "./",
	"scripts": {
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"build": "node scripts/build.js",
		"test": "node scripts/test.js --env=jsdom",
		"electron": "electron .",
		"electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
		"react-start": "node scripts/start.js",
		"electron-start": "ELECTRON_DEV=1 electron .",
		"start":
			"concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-dev\""
	},
	"jest": {
		"collectCoverageFrom": ["src/**/*.{js,jsx}"],
		"setupFiles": ["<rootDir>/config/polyfills.js"],
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.js?(x)",
			"<rootDir>/src/**/?(*.)(spec|test).js?(x)"
		],
		"testEnvironment": "node",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
			"^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
			"^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
		},
		"transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"],
		"moduleNameMapper": {
			"^react-native$": "react-native-web"
		},
		"moduleFileExtensions": ["web.js", "js", "json", "web.jsx", "jsx", "node"]
	},
	"babel": {
		"presets": ["react-app"]
	},
	"eslintConfig": {
		"extends": "react-app"
	}
}
